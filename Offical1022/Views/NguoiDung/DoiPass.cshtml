@model WebUI.ViewModels.DoiPassViewModel
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@section breadcrumb  {
    <li><a href="@Url.Action("Index","Home",null)"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
    <li class="active">Đổi mật khẩu</li>
}

@Html.Partial("DialogPleaseWait")
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Đổi mật khẩu </h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("doipass", "nguoidung", null, FormMethod.Post, new { @class = "form-horizontal", id = "frmDoiPass" }))
            {
                <div class="box-body">
                    <div class="form-group">
                        <label for="password_cu" class="col-sm-4 control-label">Mật khẩu cũ</label>
                        <div class="col-sm-8">
                            @Html.HiddenFor(m => m.username)
                            @Html.PasswordFor(m => m.password_cu, new { @class = "form-control", placeholder = "Mật khẩu cũ" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password_moi_1" class="col-sm-4 control-label">Mật khẩu mới</label>
                        <div class="col-sm-8">
                            @Html.PasswordFor(m => m.password_moi_1, new { @class = "form-control", placeholder = "Mật khẩu mới" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password_moi_2" class="col-sm-4 control-label">Xác nhận mật khẩu</label>
                        <div class="col-sm-8">
                            @Html.PasswordFor(m => m.password_moi_2, new { @class = "form-control", placeholder = "Xác nhận mật khẩu" })
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <a href="@Url.Action("Index","Home",null)" class="btn btn-default">Trở về</a>
                    <button type="submit" id="submit" class="btn btn-primary pull-right">Chấp nhận</button>
                    <p class="text-center" style="color:red">
                        @ViewBag.thongbao
                    </p>
                </div>
                <!-- /.box-footer -->
            }
        </div>
    </div>
</div>